<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mayankaggarwal.joystick.ShowActivity"
    android:background="#8057e1">

    <com.example.mayankaggarwal.joystick.CustomLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loda"/>

    <com.example.mayankaggarwal.joystick.MainActivity
        android:layout_width="200dp"
        android:layout_height="200dp"
        custom:JV_buttonColor="#FF6E40"
        custom:JV_borderColor="#00796B"
        custom:JV_backgroundColor="#009688"
        custom:JV_borderWidth="4dp"
        custom:JV_fixedCenter="false"
        android:id="@+id/myjoystick"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
